{
	"name": "portfolio-app",
	"description": "nekithrill's portfolio app",
	"version": "1.0.0",
	"author": "nekithrill <nekithrill@gmail.com>",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/nekithrill/portfolio-react"
	},
	"keywords": [
		"portfolio",
		"react",
		"typescript",
		"sass",
		"prettier",
		"eslint",
		"stylelint",
		"vite"
	],
	"browserslist": [
		">0.5%",
		"last 2 versions",
		"not dead"
	],
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"check": "npm run check:lint && npm run check:style && npm run check:format",
		"check:lint": "eslint . --ext .ts,.tsx,.js,.jsx",
		"check:style": "stylelint \"src/**/*.{css,scss}\"",
		"check:format": "prettier --check .",
		"fix": "npm run fix:lint && npm run fix:style && npm run fix:format",
		"fix:lint": "npm run check:lint -- --fix",
		"fix:style": "npm run check:style -- --fix",
		"fix:format": "prettier --write ."
	},
	"dependencies": {
		"framer-motion": "^12.23.12",
		"i18next": "^25.3.5",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-i18next": "^15.6.1",
		"react-router-dom": "^7.8.2",
		"sass": "^1.90.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@types/node": "^24.2.1",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@typescript-eslint/eslint-plugin": "^8.39.1",
		"@typescript-eslint/parser": "^8.39.1",
		"@vitejs/plugin-react": "^5.0.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-unicorn": "^60.0.0",
		"prettier": "^3.6.2",
		"stylelint": "^16.23.1",
		"stylelint-config-standard-scss": "^15.0.1",
		"stylelint-scss": "^6.12.1",
		"typescript": "^5.9.2",
		"vite": "^7.1.2"
	}
}
